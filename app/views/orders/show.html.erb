<%=  render :partial => 'layouts/navbarInner' %>
<h1>Your Cart</h1>

<%=  render :partial => 'pages/womenmen' %>

<ul>
  <% @order.line_items.each do |item| %>
    <li>Product: <%= item.product.name %> | Quantity: <%= item.quantity %>&times; | Size: <%= item.product.size %> | Price: <%= number_to_currency(item.product.cost) %></li>
  <% end %>
</ul>


<div id="totalCost" class="totalCost">

  <%= number_to_currency(@order.total_cost) %>

</div>

<%= link_to "Checkout", new_order_charge_path(:order_id => @order.id), :class=>"btn btn-primary btn-sm"%>

<%= button_to 'Empty cart', @order, method: :delete,
date: {confirm: 'Are you sure?'} %>
