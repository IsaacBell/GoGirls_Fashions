<h1>Product</h1>

<div>
  <%= @product.name %>
</div>
<% @product.images.each do |i| %>
  <%= cl_image_tag(i) %>
<% end %>
<div>
  <%= link_to "Edit", edit_product_path(@product.id)%>
  <%= link_to "Delete", product_path(@product.id),
                              :method=>"delete", :data=>{:confirm=>"Are you sure?"} %>
</div>
