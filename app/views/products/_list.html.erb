<h1>All products</h1>
<table class="table table-striped table-hover">
<% @products.each do |p| %>
<tr>
  <td>
    <%= link_to p.name, product_path(p.id) %>
  </td>
  <td>
    <%= link_to "Edit", edit_product_path(p.id)%>
  </td>
  <td>
    <%= link_to "Delete", product_path(p.id),
                                  :method=>"delete", :data=>{:confirm=>"Are you sure?"} %>
  </td>
  </div>
</tr>

<% end %>
</table>
