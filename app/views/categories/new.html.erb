

<%=  render :partial => 'layouts/navbarInner' %>

<div class="row">
  <div class="col-md-1"></div>
    <div class="col-md-5">

      <div class="row">


      <div class="col-md-11">
      <h1>New Category</h1>
      <%= form_for @category do |f| %>
        <div class="form-group">
          *<%= f.label :name %>
          <%= f.text_field :name, :class => "textfield-border form-control", :required => true %>
        </div>


        <div class="form-group">
            *<%= f.label :gender %>
            <%= f.select :gender, [['women'],['men'],['unisex']], :include_blank => false, :required => true %>
        </div>

        <%= submit_tag 'New Category', :class => 'btnborder btn btn-primary'%>


      <% end %>

    </div>
    <div class="col-md-1"></div>
    </div>


    </div>

  <div class="col-md-5">
    <%=  render :partial => 'categories/list' %>
  </div>
  <div class="col-md-1"></div>
</div>
